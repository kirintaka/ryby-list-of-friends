  <div class="container">
    <div class="container">
      <div class="container">
        <div class="container">
          <h1 class="display-4">
          <%= @friend.first_name %>
          <%= @friend.last_name %>
          </h1>
          <p class="lead">
            <%= @friend.email %>   |
            <%= @friend.phone %>   |
            <%= @friend.twitter %>
