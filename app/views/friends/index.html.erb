<p style="color: green"><%= notice %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr class="table-dark">
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <%= render friend %>
        <td>
          <%= link_to "Show this friend", friend, class:'btn btn-outline-dark' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
