<div class="container">
  <div class="row">
    <div class="col">
      <div class="card" style="width: 35rem;">
        <div class="card-body">
          <h2>Edit Profile <% resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, class: "form-control w-75", autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control w-75", placeholder: "Password", autocomplete: "new-password" %>
              <!-- 
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              -->
            </div>
            
            <div class="mb-3">
              <% f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control w-75", placeholder: "Password confirmation", autocomplete: "new-password" %>
              <i>(leave blank if you don't want to change it)</i><br />
            </div>

            <div class="mb-3">
              <%= f.label :current_password, class: "form-label" %>
              <%= f.password_field :current_password, class: "form-control w-75", autocomplete: "current-password" %>
              <i>(we need your current password to confirm your changes)</i><br />
            </div>

            <div class="actions">
              <%= f.submit "Update", class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

      <br/>

    <div class="col">
      <div class="card" style="width: 20rem;">
        <div class="card-body">
          <h3 class="card-title">Cancel my account</h3><br/>
          <h6 class="card-subtitle mb-2 text-muted">Unhappy?</h6>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>

  <br/>
  <%= link_to "Back", :back, class: "btn btn-outline-dark"%>
</div>
